<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.party.messaging.MessagingActivity">

    <ImageView
        android:id="@+id/logo_msg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_messaging_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/desc_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_messagerie"
        android:fontFamily="@font/hk_nova"
        android:textSize="40sp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/logo_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>