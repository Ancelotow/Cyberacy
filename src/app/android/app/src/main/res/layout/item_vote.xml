<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vote_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_nova"
            android:textSize="25sp"
            android:maxLines="2"
            android:text="Elections prÃ©sidentielles 2027"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/vote_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_nova"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:maxLines="2"
            android:text="Sondage public"
            app:layout_constraintRight_toRightOf="@+id/vote_name"
            app:layout_constraintLeft_toLeftOf="@+id/vote_name"
            app:layout_constraintTop_toBottomOf="@+id/vote_name"/>


        <ImageView
            android:id="@+id/logo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_nb_time"
            app:layout_constraintLeft_toLeftOf="@+id/vote_name"
            app:layout_constraintTop_toBottomOf="@+id/vote_type"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/current_round"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_nova"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:text="1er Tour : Se termine dans 25h30min"
            app:layout_constraintLeft_toRightOf="@+id/logo_time"
            app:layout_constraintTop_toTopOf="@+id/logo_time"
            app:layout_constraintBottom_toBottomOf="@+id/logo_time"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>