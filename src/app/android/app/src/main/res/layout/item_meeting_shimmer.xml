<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_month"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:fontFamily="@font/hk_nova"
        android:textSize="12sp"
        android:textAlignment="center"
        android:background="@color/shimmerColor"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hk_nova"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/shimmerColor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/txt_month"
        app:layout_constraintLeft_toRightOf="@+id/txt_month"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_lieu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/hk_nova"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@color/shimmerColor"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toLeftOf="@+id/txt_name"
        app:layout_constraintBottom_toTopOf="@id/txt_price"
        app:layout_constraintRight_toRightOf="@+id/txt_name"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/hk_nova"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:background="@color/shimmerColor"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@id/txt_lieu"
        app:layout_constraintBottom_toBottomOf="@id/txt_month"
        app:layout_constraintLeft_toLeftOf="@+id/txt_name"
        app:layout_constraintRight_toRightOf="@+id/txt_lieu"/>

</androidx.constraintlayout.widget.ConstraintLayout>