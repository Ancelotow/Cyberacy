        android:textColor="#BFBBBB"
        android:textSize="20sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints" />

    <Button
