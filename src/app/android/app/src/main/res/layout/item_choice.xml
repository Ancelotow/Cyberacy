<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/color_choice"
            android:layout_height="match_parent"
            android:layout_width="10dp"
            android:background="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/choice_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_nova"
            android:textSize="18sp"
            android:maxLines="1"
            android:text="Edouard PHILLIPE (HORIZON)"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/color_choice"/>

        <TextView
            android:id="@+id/choice_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_nova"
            android:textSize="11sp"
            android:maxLines="3"
            android:textColor="@color/grey"
            android:text="Edouarsssssssssssssssssssssssssssssssss ssssssssssssssssssss ssssssssssssssssssssssss sssssd PHILLIPE (HORIZON)"
            app:layout_constraintRight_toRightOf="@+id/choice_text"
            app:layout_constraintTop_toBottomOf="@+id/choice_text"
            app:layout_constraintLeft_toLeftOf="@+id/choice_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>