<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.net.URL?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>

<GridPane alignment="TOP_CENTER" hgap="10" prefHeight="600" prefWidth="1000" vgap="20"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.cyberacy.negotrack.LoginController">

    <columnConstraints>
        <ColumnConstraints prefWidth="500" />
        <ColumnConstraints prefWidth="500" />
    </columnConstraints>

    <ImageView fitHeight="400"
               pickOnBounds="true"
               preserveRatio="true"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="0"
               GridPane.valignment="CENTER">
        <image>
            <Image url="@../../../images/negotrack_icone.png" />
        </image>
    </ImageView>


    <GridPane maxWidth="500" minWidth="500" prefHeight="600" GridPane.columnIndex="1">

        <rowConstraints>
            <RowConstraints percentHeight="10.0" prefHeight="100.0" />
            <RowConstraints percentHeight="30.0" prefHeight="50.0" />
            <RowConstraints percentHeight="20.0" prefHeight="100.0" />
            <RowConstraints percentHeight="20.0" prefHeight="50.0" />
            <RowConstraints percentHeight="20.0" prefHeight="50.0" />
        </rowConstraints>

        <Label styleClass="txt-title-H1"
               text="CONNEXION"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="1"
               GridPane.valignment="CENTER" />

        <TextField fx:id="login"
                   promptText="Identifiant"
                   styleClass="input-text"
                   GridPane.halignment="CENTER"
                   GridPane.rowIndex="2" >
            <GridPane.margin>
                <Insets>
                    <right>20</right>
                    <left>10</left>
                </Insets>
            </GridPane.margin>
        </TextField>

        <PasswordField fx:id="password"
                       promptText="Mot de passe"
                       styleClass="input-text"
                       GridPane.halignment="RIGHT"
                       GridPane.rowIndex="3" >
            <GridPane.margin>
                <Insets>
                    <right>20</right>
                    <left>10</left>
                </Insets>
            </GridPane.margin>
        </PasswordField>

        <Button prefWidth="150"
                styleClass="btn-primary-outline"
                text="Connexion"
                onAction="#connection"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="4" />

        <columnConstraints>
            <ColumnConstraints percentWidth="100.0" />
        </columnConstraints>

    </GridPane>


    <stylesheets>
        <URL value="@../../../css/stylesheet.css" />
    </stylesheets>

    <rowConstraints>
        <RowConstraints />
    </rowConstraints>

</GridPane>
