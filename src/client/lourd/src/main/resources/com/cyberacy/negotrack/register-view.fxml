<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>


<GridPane alignment="TOP_CENTER" hgap="10" prefHeight="600" prefWidth="1000" vgap="20"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.cyberacy.negotrack.views.RegisterController" fx:id="form">

    <columnConstraints>
        <ColumnConstraints prefWidth="500"/>
        <ColumnConstraints prefWidth="500"/>
    </columnConstraints>

    <ImageView fitHeight="400"
               pickOnBounds="true"
               preserveRatio="true"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="0"
               GridPane.valignment="CENTER">
        <image>
            <Image url="@../../../images/negotrack_icone.png"/>
        </image>
    </ImageView>

    <GridPane maxWidth="500" minWidth="500" prefHeight="600" GridPane.columnIndex="1">

        <rowConstraints>
            <RowConstraints percentHeight="10.0" prefHeight="100.0"/>
            <RowConstraints percentHeight="30.0" prefHeight="10.0"/>
            <RowConstraints percentHeight="10.0" prefHeight="100.0"/>
            <RowConstraints percentHeight="10.0" prefHeight="10.0"/>
            <RowConstraints percentHeight="10.0" prefHeight="10.0"/>
            <RowConstraints percentHeight="10.0" prefHeight="50.0"/>
            <RowConstraints percentHeight="10.0" prefHeight="50.0"/>
        </rowConstraints>

        <Label styleClass="txt-title-H1"
               text="INSCRIPTION"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="1"
               GridPane.valignment="CENTER"/>

        <TextField fx:id="login"
                   promptText="Identifiant"
                   styleClass="input-text"
                   GridPane.halignment="CENTER"
                   GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets>
                    <right>20</right>
                    <left>10</left>
                </Insets>
            </GridPane.margin>
        </TextField>

        <PasswordField fx:id="password"
                       promptText="Mot de passe"
                       styleClass="input-text"
                       GridPane.halignment="RIGHT"
                       GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets>
                    <right>20</right>
                    <left>10</left>
                </Insets>
            </GridPane.margin>
        </PasswordField>

        <TextField fx:id="email"
                   promptText="Adresse mail"
                   styleClass="input-text"
                   GridPane.halignment="CENTER"
                   GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets>
                    <right>20</right>
                    <left>10</left>
                </Insets>
            </GridPane.margin>
        </TextField>

        <Button prefWidth="150"
                styleClass="btn-primary-outline"
                text="Inscription"
                onAction="#register"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="5"/>

        <Button prefWidth="250"
                styleClass="btn-primary-outline"
                text="Revenir Ã  la conexion"
                onAction="#goToConnexion"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="6"/>

    </GridPane>


    <stylesheets>
        <URL value="@../../../css/stylesheet.css"/>
    </stylesheets>

    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
