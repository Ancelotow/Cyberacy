<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyberacy.negotrack.views.modals.add_user_story.AddUserStoryController">

    <rowConstraints>
        <RowConstraints percentHeight="30.0" />
        <RowConstraints percentHeight="10.0" />
        <RowConstraints percentHeight="10.0" />
        <RowConstraints percentHeight="30.0" />
        <RowConstraints percentHeight="20.0" />
        <RowConstraints />
    </rowConstraints>

    <Label styleClass="txt-title-H1" text="NOUVELLE USER STORY" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />

    <TextField fx:id="name" promptText="Nom*" styleClass="input-text" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="5.0" top="5.0">
                <right>10.0</right>
                <left>10.0</left>
            </Insets>
        </GridPane.margin>
    </TextField>

    <ComboBox fx:id="cbEpic" prefHeight="49.0" prefWidth="999.0" promptText="Epic*" styleClass="combo-box" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets bottom="5.0" top="5.0">
                <right>10.0</right>
                <left>10.0</left>
            </Insets>
        </GridPane.margin>
    </ComboBox>

    <TextArea fx:id="description" prefHeight="75" promptText="Description" styleClass="input-text" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets bottom="5.0" top="5.0">
                <right>10.0</right>
                <left>10.0</left>
            </Insets>
        </GridPane.margin>
    </TextArea>

    <Button onAction="#addUserStory" prefWidth="150" styleClass="btn-primary-outline" text="Ajouter" GridPane.halignment="CENTER" GridPane.rowIndex="4" />



    <stylesheets>
        <URL value="@../../../../css/stylesheet.css" />
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>

</GridPane>
