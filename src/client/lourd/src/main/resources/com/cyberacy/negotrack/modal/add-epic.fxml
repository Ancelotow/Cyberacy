<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.cyberacy.negotrack.views.modals.add_epic.AddEpicController"
          prefHeight="400.0" prefWidth="600.0">

    <rowConstraints>
        <RowConstraints percentHeight="30.0" />
        <RowConstraints percentHeight="10.0" />
        <RowConstraints percentHeight="30.0" />
        <RowConstraints percentHeight="30.0" />
        <RowConstraints />
    </rowConstraints>

    <Label styleClass="txt-title-H1" text="NOUVEL EPIC" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />

    <TextField fx:id="name" promptText="Nom*" styleClass="input-text" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="5.0" top="5.0">
                <right>10.0</right>
                <left>10.0</left>
            </Insets>
        </GridPane.margin>
    </TextField>

    <TextArea fx:id="description" prefHeight="75" promptText="Description" styleClass="input-text" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets bottom="5.0" top="5.0">
                <right>10.0</right>
                <left>10.0</left>
            </Insets>
        </GridPane.margin>
    </TextArea>

    <Button onAction="#addEpic" prefWidth="150" styleClass="btn-primary-outline" text="Ajouter" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

    <stylesheets>
        <URL value="@../../../../css/stylesheet.css" />
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>

</GridPane>
